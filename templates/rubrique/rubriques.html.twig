
{% block body %}
	<div class="row">
		<div class="col-12 my-auto">
			<nav class="navbar navbar-expand-lg justify-content-center navbar-light bg-light mt-3 mb-4">
				<ul class="nav navbar-nav flex-row justify-content-center flex-nowrap">
					{% for rubrique in rubriques %}
						<li class="nav-item dropdown">
							<div class="dropdown">
								<a class="btn btn-secondary dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
									{{ rubrique.nomRubrique }}
								</a>
								<div class="dropdown-content">
									{% for sousrubrique in sousrubriques %}
										{% if sousrubrique.idRubrique.idRubrique == rubrique.idRubrique  %}
											<a class='dropdown-item' href="{{ path('sous_rubrique_show', {'idSousRubrique': sousrubrique.idSousRubrique}) }}">{{sousrubrique.nomSousRubrique}}</a>
										{% endif %}
									{% endfor %}
								</div>
							</div>
						</li>
					{% endfor %}
				</ul>
			</nav>
		</div>
	</div>
{% endblock %}
