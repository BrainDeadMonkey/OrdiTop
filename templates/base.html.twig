<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>

		{# Total number of items in the cart  #}
		{% set all_cart = 0 %}
		{% for item in app.session.get("panier") %}
			{% set all_cart = all_cart + item %}
		{% endfor %}

		{# !!!!!!!!!!!! #}
		{# Header start #}

		{# Navbar #}
			<div class="container"> <div class="row">
				<div class="col-12 my-auto">
					<nav class="navbar navbar-expand-lg navbar-light bg-light flex-nowrap">
						<a class="navbar-brand clr" href="{{ path('article_index') }}">
							<img src="/build/images/output-ondqsdlinejpgtools.png" class="img-fluid my-0 mx-0" width="50" height="50" alt="OrdiTop">
						</a>
							<ul class="navbar-nav mr-auto mx-auto ">
								<form id="searchform" action="{{ path('search_result') }}">
								<div class="input-group my-2">
									<input class="form-control form-control-sm" type="text" name="a" placeholder="Search" aria-label="Search">
									<a class ="mt-auto ml-3" href="javascript:{}" onclick="document.getElementById('searchform').submit();">
										<span style="color: Dodgerblue;">
											<i class="fas fa-search fa-lg"></i>
										</a>
									</span>
									</div>
								</form>
							</ul>
							<ul class="nav navbar-nav flex-row justify-content-center flex-nowrap mr-2">
								{% if not app.request.hasPreviousSession %}
									<a class="btn btn-raised btn-danger btn-sm ml-1 mr-1 d-none d-sm-block" style="width: 101px" href="{{ path('app_login') }}" role="button" title="Log In" target="blank">Log in
										<i class="fas fa-sign-in-alt"></i>
									</a>
									<a class="btn btn-raised btn-danger ml-1 mr-1 d-block d-sm-none" href="{{ path('app_login') }}" role="button">
										<i class="fas fa-sign-in-alt"></i>
									</a>
								{% endif %}
								{% if app.request.hasPreviousSession %}
									<a class="btn btn-raised btn-danger btn-sm ml-1 mr-1 d-none d-md-block" style="width: 101px" href="{{ path('app_logout') }}" role="button">Log out
										<i class="fas fa-sign-out-alt"></i>
									</a>
									<a class="btn btn-raised btn-danger ml-1 mr-1 d-block d-md-none" href="{{ path('app_logout') }}" role="button">
										<i class="fas fa-sign-out-alt"></i>
									</a>
								{% endif %}
								{% if is_granted('ROLE_ADMIN') %}
									<a class="btn btn-raised btn-info btn-sm ml-1 d-none d-md-block" href="{{ path('article_new') }}" role="button">Create new</a>
									<a class="btn btn-raised btn-info ml-1 mr-1 d-block d-md-none" href="{{ path('article_new') }}" role="button">
										<i class="far fa-plus-square"></i>
									</a>
								{% endif %}
							</ul>
							<ul class="nav navbar-nav flex-row justify-content-center flex-nowrap">
								<li class="nav-item">
									<a href="{{ path('panier_liste') }}">
										<i class="fas fa-shopping-cart fa-2x">{{ all_cart }}</i>
									</a>
									
								</li>
								<li class="nav-item"></li>
								<li class="nav-item"></li>
							</ul>
						
					</nav>
				</div>
			</div>

			{# Header carousel #}
			<div class="row">
				<div class="col-12 my-auto">
					<div id="carouselExampleIndicators" class="carousel slide mb-3 mt-4" data-ride="carousel">
						<ol class="carousel-indicators ">
							<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
							<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
							<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
						</ol>
						<div class="carousel-inner">
							<div class="carousel-item active">
								<img class="d-block w-100" height="100px" src="{{asset('https://c.wallhere.com/photos/e3/62/3750x1200_px_Desert_landscape_Monument_Valley_road-1105269.jpg!d')}}" alt="First slide">
							</div>
							<div class="carousel-item">
								<img class="d-block w-100" height="100px" src="{{asset('https://c.wallhere.com/photos/e3/62/3750x1200_px_Desert_landscape_Monument_Valley_road-1105269.jpg!d')}}" alt="Second slide">
							</div>
							<div class="carousel-item">
								<img class="d-block w-100" height="100px" src="{{asset('https://c.wallhere.com/photos/e3/62/3750x1200_px_Desert_landscape_Monument_Valley_road-1105269.jpg!d')}}" alt="Third slide">
							</div>
						</div>
						<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
			</div>

			{# Rendering of categories #}
			{{ render(controller( 'App\\Controller\\BaseController::index'	)) }}

			{# !!!!!!!!!! #}
			{# Header end #}{% block body %}
			{% endblock %}


			{# !!!!!!!!!!!! #}
			{# Footer start #}

			{# Footer carousel #}
				<div class="row mt-5"> <div class="col-12 my-auto">
					<div id="footer_carousel" class="carousel slide" data-ride="carousel">
						<div class="carousel-inner">
							<div class="carousel-item active">
								<img class="d-block w-100" height="100px" src="{{asset('/build/images/front_images/carousel_logos1.jpg')}}" alt="First slide">
							</div>
							<div class="carousel-item">
								<img class="d-block w-100" height="100px" src="{{asset('/build/images/front_images/carousel_logo2.jpg')}}" alt="Second slide">
							</div>
							<div class="carousel-item">
								<img class="d-block w-100" height="100px" src="{{asset('/build/images/front_images/carousel_logo3.jpg')}}" alt="Third slide">
							</div>
						</div>
					</div>
				</div>
			</div>

