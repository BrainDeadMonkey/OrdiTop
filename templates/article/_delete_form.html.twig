<form method="post" action="{{ path('article_delete', {'idArticle': article.idArticle}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.idArticle) }}">
    <button class="btn btn-raised btn-sm btn-danger ml-1 mr-1" style="width: 101px">Delete</button>
</form>
