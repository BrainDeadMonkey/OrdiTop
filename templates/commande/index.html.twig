{% extends 'base.html.twig' %}

{% block title %}Commande index{% endblock %}

{% block body %}
    <h1>Commande index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdCommande</th>
                <th>NombreArticleTotal</th>
                <th>ReductionCustomer</th>
                <th>PrixLivraison</th>
                <th>PrixTotal</th>
                <th>ModeLivraison</th>
                <th>ModePaiement</th>
                <th>DateCommande</th>
                <th>StatutCommande</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.idCommande }}</td>
                <td>{{ commande.nombreArticleTotal }}</td>
                <td>{{ commande.reductionCustomer }}</td>
                <td>{{ commande.prixLivraison }}</td>
                <td>{{ commande.prixTotal }}</td>
                <td>{{ commande.modeLivraison }}</td>
                <td>{{ commande.modePaiement }}</td>
                <td>{{ commande.dateCommande ? commande.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ commande.statutCommande }}</td>
                <td>
                    <a href="{{ path('commande_show', {'idCommande': commande.idCommande}) }}">show</a>
                    <a href="{{ path('commande_edit', {'idCommande': commande.idCommande}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('commande_new') }}">Create new</a>
{% endblock %}
