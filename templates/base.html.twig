<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
			<link rel="stylesheet" href="https://unpkg.com/bootstrap-material-design@4.1.1/dist/css/bootstrap-material-design.min.css" integrity="sha384-wXznGJNEXNG1NFsbm0ugrLFMQPWswR3lds2VeinahP8N0zJw9VWSopbjv2x7WCvX" crossorigin="anonymous">
		{% endblock %}
	</head>
	<body>

		{# Total number of items in the cart  #}
		{% set all_cart = 0 %}
		{% for item in app.session.get("panier") %}
			{% set all_cart = all_cart + item %}
		{% endfor %}

		{# !!!!!!!!!!!! #}
		{# Header start #}

		{# Navbar #}
			<div class="container"> <div class="row">
				<div class="col-12 my-auto">
					<nav class="navbar navbar-expand-lg justify-content-center navbar-light bg-light mt-4 mb-3">
						<a class="navbar-brand clr" href="{{ path('article_index') }}">Record</a>
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
							<span class="navbar-toggler-icon">
								<i class="fa fa-bars clr2" aria-hidden="true"></i>
							</span>
						</button>
						<div class="collapse navbar-collapse" id="navbarSupportedContent">
							<ul class="navbar-nav mr-auto mx-auto text-center">
								<form class="form-inline my-2 my-lg-0" action="{{ path('search_result') }}">
									<input class="form-control mr-sm-2" type="search" name="a" placeholder="Search" aria-label="Search">
									<button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
								</form>
							</ul>
							<ul class="nav navbar-nav flex-row justify-content-center flex-nowrap mr-2">
							{% if not app.request.hasPreviousSession %}
								<a class="btn btn-raised btn-danger btn-sm mr-1" style="width: 101px" href="{{ path('app_login') }}" role="button" title="Log In" target="blank">Log in <i class="fas fa-sign-in-alt"></i></a>
							{% endif %}
							{% if app.request.hasPreviousSession %}
								<a class="btn btn-raised btn-danger btn-sm ml-1 mr-1" style="width: 101px" href="{{ path('app_logout') }}" role="button">Log out <i class="fas fa-sign-out-alt"></i></a>
							{% endif %}
							{% if is_granted('ROLE_ADMIN') %}
								<a class="btn btn-raised btn-info btn-sm ml-1" href="{{ path('article_new') }}" role="button">Create new</a>
							{% endif %}
							</ul>
							<ul class="nav navbar-nav flex-row justify-content-center flex-nowrap">
								<li class="nav-item">
									<a href="{{ path('panier_liste') }}">
										<i class="fas fa-shopping-cart fa-2x"></i>
									</a>
									{{ all_cart }}
								</li>
								<li class="nav-item"></li>
								<li class="nav-item"></li>
							</ul>
						</div>
					</nav>
				</div>
			</div>

			{# Header carousel #}
			<div class="row">
				<div class="col-12 my-auto">
					<div id="carouselExampleIndicators" class="carousel slide mb-3" data-ride="carousel">
						<ol class="carousel-indicators ">
							<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
							<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
							<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
						</ol>
						<div class="carousel-inner">
							<div class="carousel-item active">
								<img class="d-block w-100" height="100px" src="{{asset('https://c.wallhere.com/photos/e3/62/3750x1200_px_Desert_landscape_Monument_Valley_road-1105269.jpg!d')}}" alt="First slide">
							</div>
							<div class="carousel-item">
								<img class="d-block w-100" height="100px" src="{{asset('https://c.wallhere.com/photos/e3/62/3750x1200_px_Desert_landscape_Monument_Valley_road-1105269.jpg!d')}}" alt="Second slide">
							</div>
							<div class="carousel-item">
								<img class="d-block w-100" height="100px" src="{{asset('https://c.wallhere.com/photos/e3/62/3750x1200_px_Desert_landscape_Monument_Valley_road-1105269.jpg!d')}}" alt="Third slide">
							</div>
						</div>
						<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
							<span class="carousel-control-next-icon" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
					</div>
				</div>
			</div>

			{# Rendering of categories #}
			{{ render(controller( 'App\\Controller\\BaseController::index'	)) }}

			{# !!!!!!!!!! #}
			{# Header end #}{% block body %}
			{% endblock %}


			{# !!!!!!!!!!!! #}
			{# Footer start #}

			{# Footer carousel #}
				<div class="row mt-5"> <div class="col-12 my-auto">
					<div id="footer_carousel" class="carousel slide" data-ride="carousel">
						<div class="carousel-inner">
							<div class="carousel-item active">
								<img class="d-block w-100" height="100px" src="{{asset('/build/images/front_images/carousel_logos1.jpg')}}" alt="First slide">
							</div>
							<div class="carousel-item">
								<img class="d-block w-100" height="100px" src="{{asset('/build/images/front_images/carousel_logo2.jpg')}}" alt="Second slide">
							</div>
							<div class="carousel-item">
								<img class="d-block w-100" height="100px" src="{{asset('/build/images/front_images/carousel_logo3.jpg')}}" alt="Third slide">
							</div>
						</div>
					</div>
				</div>
			</div>

			{# Footer #}
			<footer class="pt-4 my-md-5 pt-md-5 border-top">
				<div class="row">
					<div class="col-12 col-md">
						<img class="mb-2" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="24" height="24">
						<small class="d-block mb-3 text-muted">© 2018-2019</small>
					</div>
					<div class="col-6 col-md">
						<h5>Features</h5>
						<ul class="list-unstyled text-small">
